<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/commonLine"/>
    <TextView
        android:layout_marginRight="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="33dp"
        android:text="为了您的账号安全,需要您绑定一个常用邮箱 用于手机号丢失时更换手机号."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="34dp"
        android:background="#F6F7F8"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:hint="请输入邮箱地址"
            android:textColor="#ABABAB"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#F6F7F8">
            <EditText
                android:id="@+id/et_confirmCode"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColor="#ABABAB"
                android:textSize="15sp" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_getConfirmCode"
            android:background="@drawable/shape_phone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:text="获取验证码"
            android:textColor="#FDFDFF"
            android:textSize="12sp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_nextStep"
        android:layout_marginTop="37dp"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="确定"
        android:background="@drawable/shape_phone"
        android:layout_width="315dp"
        android:layout_height="43dp" />

</LinearLayout>