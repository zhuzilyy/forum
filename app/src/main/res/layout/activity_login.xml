<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/guanbi"
            android:layout_marginRight="14dp"
            android:layout_marginTop="31dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="23dp"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="请输入您的手机号，登录并注册您的账号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="20dp"
        android:background="#F6F7F8"
        android:gravity="center_vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:textColor="#ABABAB"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:background="#F6F7F8">
            <EditText
                android:id="@+id/et_confirmCode"
                android:layout_marginRight="10dp"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColor="#ABABAB"
                android:textSize="15sp" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_getConfirmCode"
            android:background="@drawable/shape_phone"
            android:layout_width="86dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:text="获取验证码"
            android:textColor="#FDFDFF"
            android:textSize="12sp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_marginTop="37dp"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="登录"
        android:background="@drawable/shape_phone"
        android:layout_width="315dp"
        android:layout_height="43dp" />
    <LinearLayout
        android:id="@+id/ll_findPwd"
        android:layout_marginTop="19dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#333333"
            android:textSize="12sp"
            android:text="忘记手机号?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="#77A0FE"
            android:textSize="12sp"
            android:text="邮箱找回>>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>