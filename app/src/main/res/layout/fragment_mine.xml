<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="97dp">
        <com.chuangsheng.forum.view.CircleImageView
            android:id="@+id/iv_head"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/holder"
            android:layout_width="62dp"
            android:layout_height="62dp" />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_head"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="创盛科技"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/kanong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#9d9d9d"
                android:text="查看个人主页或者编辑资料"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/gengduo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--消息中心-->
            <RelativeLayout
                android:id="@+id/ll_newsCenter"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="54dp">
                <ImageView
                    android:id="@+id/iv_news"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/xiaoxizhongxin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@+id/iv_news"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:text="消息中心"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/gengduo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/commonLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>


            <!--我的帖子-->
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="54dp">
                <ImageView
                    android:id="@+id/iv_forum"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/wodetiezi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@+id/iv_forum"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:text="我的帖子"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/gengduo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/commonLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <!--我的回帖-->
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="54dp">
                <ImageView
                    android:id="@+id/iv_replyforum"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/wodehuitie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@+id/iv_replyforum"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:text="我的回帖"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/gengduo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/commonLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <!--我的收藏-->
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="54dp">
                <ImageView
                    android:id="@+id/iv_collection"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/shezhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@+id/iv_collection"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:text="我的收藏"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/gengduo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/commonLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <!--浏览历史-->
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="54dp">
                <ImageView
                    android:id="@+id/iv_history"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/liulanlishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@+id/iv_history"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:text="浏览历史"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/gengduo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/commonLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>


            <!--安全中心-->
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="54dp">
                <ImageView
                    android:id="@+id/iv_safeCenter"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/anquanzhongxin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@+id/iv_safeCenter"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:text="安全中心"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/gengduo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/commonLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>


            <!--关于我们-->
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="54dp">
                <ImageView
                    android:id="@+id/iv_aboutUs"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/guanyuwomen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@+id/iv_aboutUs"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:text="关于我们"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/gengduo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/commonLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <!--联系我们-->
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="54dp">
                <ImageView
                    android:id="@+id/iv_contactUs"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/lianxiwomen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@+id/iv_contactUs"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:text="联系我们"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/gengduo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/commonLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <!--意见反馈-->
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="54dp">
                <ImageView
                    android:id="@+id/iv_feedback"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/yijianfankui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@+id/iv_feedback"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:text="意见反馈"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/gengduo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/commonLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>